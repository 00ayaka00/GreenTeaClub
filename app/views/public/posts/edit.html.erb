<main>
  <p id ="notice">
    <%= flash[:notice] %>
  </p>
  <div class="container">
    <div class="row">
       <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

         <h1>投稿編集</h1>



         <div class="errors">
             <% if @post.errors.any? %>
                <%= @post.errors.count %>件のエラー
                <u1>
                  <% @post.errors.full_messages.each do |message| %>
                     <li><%= message %></li>
                  <% end %>
                </u1>
             <% end %>
         </div>




          <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
            
            <div class="field">
              <label for="image">Image</label>
              <div><%= f.file_field :image, accept: "image/*" %></div>
            </div>
            <div class="field">
               <label for="shop_name">Shop Name</label>
               <div><%= f.text_field :shop_name %></div>    
            </div>

            <div class="field">
               <label for="caption">Introduction</label>
               <div><%= f.text_area :caption %></div>
            </div>
  
            <div class="form-group">
              <%= f.submit "更新" %>
            </div>
  
            <br><%= link_to "Show", post_path(@post) %>
            <%= link_to "Back", "/posts", class: "hoge" %></br>
         <% end %>
</main>
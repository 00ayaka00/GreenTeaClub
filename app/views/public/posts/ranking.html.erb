
  <div class="container px-6 px-md-5">
    <div class="row">
      <div class="col">
<h3>人気投稿ランキング</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>順位</th>
      <th></th>
      <th>ユーザ</th>
      <th>ショップ名</th>
      <th>いいね数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each_with_index do |post, index| %>
      <tr>
        <td class="text-center"><%= index + 1 %></td>
        <td>
          <%= link_to user_path(post.user) do %>
            
               <%= image_tag post.user.get_profile_image(70, 70), class: "mt-3 rounded-circle px-3" %>
            
          <% end %>
        </td>
        <td><%= post.user_name %></td>
        <td><%= link_to post.shop_name, post_path(post),class:"link-custom" %></td>
        <td><%= post.favorites_count %></td>
        <td>
          <%= link_to 'show', post_path(post), class:"btn btn-sm btn-outline-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="center-block" style="display: flex; justify-content: center; letter-spacing: 5px;">
<%= paginate @posts %>
</div>
</div>
</div>
</div>


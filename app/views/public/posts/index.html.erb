

  <p id="notice">
    <%= flash[:notice] %>
  </p>

  <div class="container px-6 px-sm-0">
    <div class="row">
      <img src="<%= asset_path('hilla-5419527_1280.jpg') %>" alt="画像の説明">

      <div class="col-md-10 offset-md-1 text-wrap" style="word-wrap: break-word;">
        <h2>TIME LINE</h2>

        <% @posts.each do |post| %>
          <div>
            <%= link_to user_path(post.user), class: "custom-link" do %>
              <p>
                <%= image_tag post.user.get_profile_image(70, 70), class: "mt-3 rounded-circle" %>
                <%= post.user.name %>
              </p>
            <% end %>

            <div class="mx-5">
              <% if post.get_image.present? %>
                <% post.get_image.each do |image| %>
                  <%= image_tag url_for(image), size: "500x500", alt: "投稿画像" %>
                <% end %>
              <% end %>

            
                 <%= link_to post_path(post.id), class: "custom-link" do %>
                    <p class="caption-size" >
                       <%= post.caption %>
                    <p>
                 <% end %>
              

              <p>ショップ名: <%= post.shop_name %></p>
              <p>投稿日時: <%= post.created_at.strftime('%Y/%m/%d') %></p>
              
              <p>
                <% if post.favorited_by?(current_user) %>
                  <%= link_to post_favorite_path(post), class:"link-custom", method: :delete do %>
                    <i class="fa-solid fa-thumbs-up"></i><%= post.favorites.count %> いいね
                  <% end %>
                <% else %>
                  <%= link_to post_favorite_path(post), class:"link-custom", method: :post do %>
                    <i class="fa-regular fa-thumbs-up"></i> <%= post.favorites.count %> いいね
                  <% end %>
                <% end %>
              </p>
            

            <div class="border-bottom mt-4 mb-4 ">
              <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id),class:"link-custom" %></p>
            </div>
            </div>
          </div>
        <% end %>

        <div class="item__paginate">
          <%= paginate @posts %>
        </div>

      </div>
    </div>
  </div>

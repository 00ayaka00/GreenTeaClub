<div class="container px-6 px-md-5">
  <div class="row">
    <h3>Likes List</h3>
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>いいねしたPost</th>
          </tr>
        </thead>
        <tbody>
          <% @favorite_posts.each do |post| %>
            <tr class="border-bottom mt-4 mb-4">
              <td>
                <%= link_to user_path(post.user), class: "custom-link" do %>
                  <%= image_tag post.user.get_profile_image(70, 70), class: "mt-3 rounded-circle" %>
                  <%= post.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id), class: "custom-link caption-size" do %>
                    : <%= post.shop_name %>
                 <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
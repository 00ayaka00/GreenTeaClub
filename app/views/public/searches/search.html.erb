<main>
  
<h2>検索結果</h2>

<table class="table table-hover table-inverse">
    <div class="container px-5 px-sm-0">
        <div class="row">
             <div class="col-md-8">
  
                   <% if @range == "User" %>
                      <tbody>
                          <% @users.each do |user| %>
                              <tr>
                                  <%= link_to user_path(user) do %>
                                       <p><%= image_tag user.get_profile_image(70,70), class: "mt-3 rounded-circle"; %> <%= user.name %></p>
                                  <% end %>
                                  <p><%= user.introduction %></p>
         
                              </tr>
                          <% end %>
                      </tbody>
                   <% else %>
   
                      <tbody>
                          <% @posts.each do |post| %>
                               <tr>
                                  <%= link_to user_path(post.user) do %>
                                       <p><%= image_tag post.user.get_profile_image(70,70), class: "mt-3 rounded-circle"; %> <%= post.user.name %></p>
                                  <% end %>
                                  <%= link_to post_path(post.id) do %>
                                       <p>ショップ名: <%= post.shop_name %></p>
                                  <% end %>
                                  <p>説明: <%= post.caption %></p>
                                  <p>投稿日時: <%= post.created_at.strftime('%Y/%m/%d') %></p>
                               </tr>
                          <% end %>
                     </tbody>
                  <% end %>
             </div>
       </div>
    </div>
  </table>
</main>
<main>
  <div class="container px-6 px-md-5">
    <div class="row">
      
      <h2>検索結果</h2>
       <div class="col">
        <% if @range == "User" %>
          
          <table class="table table-hover table-inverse">
            <thead>
              <tr class="text-center">
                <!-- ユーザー検索結果 -->
                <th>ユーザー名</th>
                <th>自己紹介文</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr class="px-5 border-bottom mt-4 mb-4">
                  <td Class="custom-link">
                    <%= link_to user_path(user) do %>
                      <%= image_tag user.get_profile_image(70,70), class: "mt-3 rounded-circle px-3" %> <%= user.name %>
                    <% end %>
                  </td>
                  <td class="px-4">
                    : <%= user.introduction %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        <% else %>
        
          <!-- 投稿検索結果 -->
          
           <table class="table table-hover table-inverse table-responsive">
            <thead>
              <tr class="text-center">

                <th>ユーザー名</th>
                <th>投稿一覧</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr class="border-bottom mt-4 mb-4">
                  <td class="custom-link">
                    <%= link_to user_path(post.user) do %>
                      <%= image_tag post.user.get_profile_image(70,70), class: "mt-3 rounded-circle" %> <%= post.user.name %>
                    <% end %>
                  </td>
                  <td class="ps-5">
                    ショップ名: <%= post.shop_name %><br>
                    <%= link_to post_path(post.id) do %>
                      説明: <%= post.caption %><br>
                    <% end %>
                    投稿日時: <%= post.created_at.strftime('%Y/%m/%d') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
           </table>
          
        <% end %>
      </div>
    
    </div>
  </div>
</main>
<main>



<div class="table table-hover table-inverse">
    <div class="container px-6 px-md-5">
        <div class="row">
             <div class="col">
                <h2>検索結果</h2>
                  <table class="table table-hover table-inverse">
             
                   <tbody> 
                   <% if @range == "User" %>
                      <thead>
               <tr>
                <th> </th>
                <th>ユーザー名</th>
                <th>自己紹介文</th>
               
               </tr>
             </thead>
                     
                          <% @users.each do |user| %>
                            <table>
                              <tr class="col px-5 border-bottom mt-4 mb-4">
                                  <td>
                                     <%= link_to user_path(user) do %>
                                     <%= image_tag user.get_profile_image(70,70), class: "mt-3 rounded-circle px-3"; %> <%= user.name %>
                                     <% end %>
                                  </td>
                                  <td class="px-4">
                                     : <%= user.introduction %>
                                  </td>

                              </tr>
                            </table>
                          <% end %>
                      </tbody>
                      </table>
                   <% else %>

                      <tbody>
                        
                        <thead>
               <tr>
                <th> </th>
                <th>ユーザー名</th>
                <th>投稿一覧</th>
               
               </tr>
             </thead>
                          <% @posts.each do |post| %>
                               <table>
                                  <tr class="border-bottom mt-4 mb-4">
                                     <td>
                                        <%= link_to user_path(post.user) do %>
                                        <%= image_tag post.user.get_profile_image(70,70), class: "mt-3 rounded-circle"; %> <%= post.user.name %>
                                        <% end %>
                                     </td><br>
                                     <td class="ps-5">
                                        ショップ名: <%= post.shop_name %><br>
                                        <%= link_to post_path(post.id) do %>
                                          説明: <%= post.caption %><br>
                                        <% end %>
                                        
                                        投稿日時: <%= post.created_at.strftime('%Y/%m/%d') %>
                                  </tr>
                               </table>
                          <% end %>
                     </tbody>
                  <% end %>
             </div>
       </div>
    </div>
  </div>
</main>
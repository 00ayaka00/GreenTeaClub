<p id ="notice">
    <%= flash[:notice] %>
</p>

<div class="errors">
             <% if @user.errors.any? %>
                <%= @user.errors.count %>件のエラー
                <u1>
                  <% @user.errors.full_messages.each do |message| %>
                     <li><%= message %></li>
                  <% end %>
                </u1>
             <% end %>
</div>

<div class="containar px-5 px-sm-8">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  <br>
  <label for="inputIntroduction">自己紹介文</label><br>
  <%= f.text_area :introduction, id: "inputIntroduction" %><br>
  <span id="introductionCounter">0/50</span><br>
  
  <div class="form-group">
      <input type="submit" name="commit" value="更新" class="btn btn-primary" data-disable-with="更新中">
  </div>
<% end %>
</div>
</div>
</div>

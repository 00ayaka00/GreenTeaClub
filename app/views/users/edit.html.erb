<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  <br>
  <label for="inputIntroduction">自己紹介文</label><br>
  <%= f.text_area :introduction, id: "inputIntroduction" %><br>
  <span id="introductionCounter">0/50</span><br>
  <%= f.submit "更新" %>
<% end %>
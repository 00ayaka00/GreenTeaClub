<!DOCTYPE html>
<html>
    <head>
        <title>Admin - Green Tea Club</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <script src="https://kit.fontawesome.com/dabd92ad6d.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 

        <div class="container">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              
              
              <% if admin_signed_in? %>
              <li class="nav-item">
                    <%= link_to (destroy_admin_session_path), class: "custom-link", method: :delete do %>
                           <i class="fa-solid fa-right-from-bracket"></i>
                               ログアウト
                    <% end %>
              </li>
              <li class="nav-item">
                    <%= link_to (posts_path), class: "custom-link" do %>
                           <i class="fa-solid fa-house"></i>
                               タイムライン
                    <% end %>
              </li>
              <% else %>
                      <li class="nav-item px-2">
                        <%= link_to (new_admin_session_path), class: "custom-link" do %>
                          <i class="fa-solid fa-user-plus"></i>
                            新規登録
                        <% end %>
                      </li>
                      <li class="nav-item px-2">
                        <%= link_to (admin_session_path), class: "custom-link" do %>
                          <i class="fa-solid fa-right-to-bracket"></i>
                            ログイン
                        <% end %>
                      </li>

                 <% end %>
              
    </head>
    <body>
       <%= yield %>
    </body>
</html>